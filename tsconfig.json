{
    "compilerOptions": {
      /* Base Options: */
      "esModuleInterop": true,
      "skipLibCheck": true,
      "target": "es2022",
      "allowJs": true,
      "resolveJsonModule": true,
      "moduleDetection": "force",
      "isolatedModules": true,
      "verbatimModuleSyntax": true,
  
      /* Strictness */
      "strict": true,
      "noUncheckedIndexedAccess": true,
      "noImplicitOverride": true,

      /* Transpiling */
      "module": "NodeNext",
      "rootDir": "./src",
      "outDir": "dist",
      "sourceMap": true,

      // ECMAScript 2022 and APIs for type-checking
      "lib": ["es2022"]
    },

    // Only transpile ./src
    "include": ["src/**/*"],
  }